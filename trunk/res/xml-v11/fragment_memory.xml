    <PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ebookdroid="http://ebookdroid.org"
        android:summary="@string/pref_performance_category_summary"
        android:title="@string/pref_performance_category" >

        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_pagesinmemory_defvalue"
            android:key="@string/pref_pagesinmemory_id"
            ebookdroid:minValue="@string/pref_pagesinmemory_minvalue"
            ebookdroid:maxValue="@string/pref_pagesinmemory_maxvalue"
            android:summary="@string/pref_pagesinmemory_summary"
            android:title="@string/pref_pagesinmemory_title" />

        <PreferenceCategory
            android:summary="@string/pref_lowlevel_category_summary"
            android:title="@string/pref_lowlevel_category" >

            <ListPreference
                android:defaultValue="@string/pref_docviewtype_surface"
                android:entries="@array/pref_docviewtype_entries"
                android:entryValues="@array/pref_docviewtype_values"
                android:key="@string/pref_docviewtype_id"
                android:summary="@string/pref_docviewtype_summary"
                android:title="@string/pref_docviewtype_title" />

            <org.emdev.ui.preference.SeekBarPreference
                android:defaultValue="@string/pref_decoding_threads_defvalue"
                android:key="@string/pref_decoding_threads_id"
                ebookdroid:minValue="@string/pref_decoding_threads_minvalue"
                ebookdroid:maxValue="@string/pref_decoding_threads_maxvalue"
                android:summary="@string/pref_decoding_threads_summary"
                android:title="@string/pref_decoding_threads_title" />

            <ListPreference
                android:defaultValue="@string/pref_thread_priority_normal"
                android:entries="@array/pref_thread_priority_entries"
                android:entryValues="@array/pref_thread_priority_values"
                android:key="@string/pref_decodethread_priority_id"
                android:summary="@string/pref_decodethread_priority_summary"
                android:title="@string/pref_decodethread_priority_title" />

            <ListPreference
                android:defaultValue="@string/pref_thread_priority_normal"
                android:entries="@array/pref_thread_priority_entries"
                android:entryValues="@array/pref_thread_priority_values"
                android:key="@string/pref_drawthread_priority_id"
                android:summary="@string/pref_drawthread_priority_summary"
                android:title="@string/pref_drawthread_priority_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_usenativegraphics_defvalue"
                android:key="@string/pref_usenativegraphics_id"
                android:summary="@string/pref_usenativegraphics_summary"
                android:title="@string/pref_usenativegraphics_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_hwa_enabled_defvalue"
                android:key="@string/pref_hwa_enabled_id"
                android:summary="@string/pref_hwa_enabled_summary"
                android:title="@string/pref_hwa_enabled_title" />

            <ListPreference
                android:defaultValue="@string/pref_bitmapsize_128"
                android:entries="@array/pref_bitmapsize_entries"
                android:entryValues="@array/pref_bitmapsize_values"
                android:key="@string/pref_bitmapsize_id"
                android:summary="@string/pref_bitmapsize_summary"
                android:title="@string/pref_bitmapsize_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_bitmapfilering_enabled_defvalue"
                android:key="@string/pref_bitmapfilering_enabled_id"
                android:summary="@string/pref_bitmapfilering_enabled_summary"
                android:title="@string/pref_bitmapfilering_enabled_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_texturereuse_defvalue"
                android:key="@string/pref_texturereuse_id"
                android:summary="@string/pref_texturereuse_summary"
                android:title="@string/pref_texturereuse_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_bitmaphack_defvalue"
                android:key="@string/pref_bitmaphack_id"
                android:summary="@string/pref_bitmaphack_summary"
                android:title="@string/pref_bitmaphack_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_earlyrecycling_defvalue"
                android:key="@string/pref_earlyrecycling_id"
                android:summary="@string/pref_earlyrecycling_summary"
                android:title="@string/pref_earlyrecycling_title" />

            <CheckBoxPreference
                android:defaultValue="@string/pref_reloadduringzoom_defvalue"
                android:key="@string/pref_reloadduringzoom_id"
                android:summary="@string/pref_reloadduringzoom_summary"
                android:title="@string/pref_reloadduringzoom_title" />

            <org.emdev.ui.preference.SeekBarPreference
                android:defaultValue="@string/pref_heappreallocate_defvalue"
                android:key="@string/pref_heappreallocate_id"
                ebookdroid:minValue="@string/pref_heappreallocate_minvalue"
                ebookdroid:maxValue="@string/pref_heappreallocate_maxvalue"
                android:summary="@string/pref_heappreallocate_summary"
                android:title="@string/pref_heappreallocate_title" />

        </PreferenceCategory>

    </PreferenceScreen>
