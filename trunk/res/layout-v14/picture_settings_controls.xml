<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <org.emdev.ui.widget.SeekControlView
        android:id="@+id/pictureSettingsContrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultValue="@string/pref_contrast_defvalue"
        android:paddingBottom="20dp"
        android:text="@string/pref_contrast_title"
        ebookdroid:maxValue="@string/pref_contrast_maxvalue"
        ebookdroid:minValue="@string/pref_contrast_minvalue"
        ebookdroid:showMaxValue="@string/pref_contrast_show_maxvalue"
        ebookdroid:showMinValue="@string/pref_contrast_show_minvalue" />

    <org.emdev.ui.widget.SeekControlView
        android:id="@+id/pictureSettingsGamma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultValue="@string/pref_gamma_defvalue"
        android:paddingBottom="20dp"
        android:text="@string/pref_gamma_title"
        ebookdroid:maxValue="@string/pref_gamma_maxvalue"
        ebookdroid:minValue="@string/pref_gamma_minvalue"
        ebookdroid:showMaxValue="@string/pref_gamma_show_maxvalue"
        ebookdroid:showMinValue="@string/pref_gamma_show_minvalue" />

    <org.emdev.ui.widget.SeekControlView
        android:id="@+id/pictureSettingsExposure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:defaultValue="@string/pref_exposure_defvalue"
        android:paddingBottom="20dp"
        android:text="@string/pref_exposure_title"
        ebookdroid:maxValue="@string/pref_exposure_maxvalue"
        ebookdroid:minValue="@string/pref_exposure_minvalue"
        ebookdroid:showMaxValue="@string/pref_exposure_show_maxvalue"
        ebookdroid:showMinValue="@string/pref_exposure_show_minvalue" />

    <Switch
        android:id="@+id/pictureSettingsAutoLevels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="@string/pref_autolevels_title" />

</LinearLayout>