<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="150sp"
  android:layout_height="150sp" android:background="@drawable/zoom">
    <ImageView android:id="@+id/recentItemImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"></ImageView>
    <TextView android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/recentItemText"
              android:singleLine="true"
              android:layout_gravity="center"
              android:ellipsize="marquee" android:gravity="center"/>
    
</LinearLayout>
