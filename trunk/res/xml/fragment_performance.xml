<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org"
    android:summary="@string/pref_performance_category_summary"
    android:title="@string/pref_performance_category" >

    <org.emdev.ui.preference.SeekBarPreference
        android:defaultValue="@string/pref_pagesinmemory_defvalue"
        android:key="@string/pref_pagesinmemory_id"
        android:summary="@string/pref_pagesinmemory_summary"
        android:title="@string/pref_pagesinmemory_title"
        ebookdroid:maxValue="@string/pref_pagesinmemory_maxvalue"
        ebookdroid:minValue="@string/pref_pagesinmemory_minvalue" />

    <PreferenceCategory
        android:summary="@string/pref_lowlevel_category_summary"
        android:title="@string/pref_lowlevel_category" >

        <org.emdev.ui.preference.SwitchPreferenceEx
            android:defaultValue="@string/pref_force_simd_defvalue"
            android:key="@string/pref_force_simd_id"
            android:summary="@string/pref_force_simd_summary"
            android:title="@string/pref_force_simd_title" />

        <ListPreference
            android:defaultValue="@string/pref_decodeprocess_nicelevel_defvalue"
            android:entries="@array/pref_decodeprocess_nicelevel_entries"
            android:entryValues="@array/pref_decodeprocess_nicelevel_values"
            android:key="@string/pref_decodeprocess_nicelevel_id"
            android:summary="@string/pref_decodeprocess_nicelevel_summary"
            android:title="@string/pref_decodeprocess_nicelevel_title" />

        <ListPreference
            android:defaultValue="@string/pref_thread_priority_lower"
            android:entries="@array/pref_thread_priority_entries"
            android:entryValues="@array/pref_thread_priority_values"
            android:key="@string/pref_decodethread_priority_id"
            android:summary="@string/pref_decodethread_priority_summary"
            android:title="@string/pref_decodethread_priority_title" />

        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_decodethread_timeout_defvalue"
            android:key="@string/pref_decodethread_timeout_id"
            android:summary="@string/pref_decodethread_timeout_summary"
            android:title="@string/pref_decodethread_timeout_title"
            ebookdroid:maxValue="@string/pref_decodethread_timeout_maxvalue"
            ebookdroid:minValue="@string/pref_decodethread_timeout_minvalue" />

        <ListPreference
            android:defaultValue="@string/pref_thread_priority_higher"
            android:entries="@array/pref_thread_priority_entries"
            android:entryValues="@array/pref_thread_priority_values"
            android:key="@string/pref_drawthread_priority_id"
            android:summary="@string/pref_drawthread_priority_summary"
            android:title="@string/pref_drawthread_priority_title" />

        <org.emdev.ui.preference.SwitchPreferenceEx
            android:defaultValue="@string/pref_decodingonscroll_defvalue"
            android:key="@string/pref_decodingonscroll_id"
            android:summary="@string/pref_decodingonscroll_summary"
            android:title="@string/pref_decodingonscroll_title" />

        <ListPreference
            android:defaultValue="@string/pref_bitmapsize_512"
            android:entries="@array/pref_bitmapsize_entries"
            android:entryValues="@array/pref_bitmapsize_values"
            android:key="@string/pref_bitmapsize_id"
            android:summary="@string/pref_bitmapsize_summary"
            android:title="@string/pref_bitmapsize_title" />

        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_heappreallocate_defvalue"
            android:key="@string/pref_heappreallocate_id"
            android:summary="@string/pref_heappreallocate_summary"
            android:title="@string/pref_heappreallocate_title"
            ebookdroid:maxValue="@string/pref_heappreallocate_maxvalue"
            ebookdroid:minValue="@string/pref_heappreallocate_minvalue" />
        <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_pdfstoragesize_defvalue"
            android:key="@string/pref_pdfstoragesize_id"
            android:summary="@string/pref_pdfstoragesize_summary"
            android:title="@string/pref_pdfstoragesize_title"
            ebookdroid:maxValue="@string/pref_pdfstoragesize_maxvalue"
            ebookdroid:minValue="@string/pref_pdfstoragesize_minvalue" />
    </PreferenceCategory>

</PreferenceScreen>