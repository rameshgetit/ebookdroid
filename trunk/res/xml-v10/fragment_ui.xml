<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ebookdroid="http://ebookdroid.org"
    android:summary="@string/pref_ui_category_summary"
    android:title="@string/pref_ui_category" >

    <CheckBoxPreference
            android:defaultValue="@string/pref_loadrecent_defvalue"
            android:key="@string/pref_loadrecent_id"
            android:summary="@string/pref_loadrecent_summary"
            android:title="@string/pref_loadrecent_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_confirmclose_defvalue"
            android:key="@string/pref_confirmclose_id"
            android:summary="@string/pref_confirmclose_summary"
            android:title="@string/pref_confirmclose_title" />

    <org.emdev.ui.preference.SeekBarPreference
            android:defaultValue="@string/pref_brightness_defvalue"
            android:key="@string/pref_brightness_id"
            ebookdroid:minValue="@string/pref_brightness_minvalue"
            ebookdroid:maxValue="@string/pref_brightness_maxvalue"
            android:summary="@string/pref_brightness_summary"
            android:title="@string/pref_brightness_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_brightnessnightmodeonly_defvalue"
            android:key="@string/pref_brightnessnightmodeonly_id"
            android:summary="@string/pref_brightnessnightmodeonly_summary"
            android:title="@string/pref_brightnessnightmodeonly_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_keepscreenon_defvalue"
            android:key="@string/pref_keepscreenon_id"
            android:summary="@string/pref_keepscreenon_summary"
            android:title="@string/pref_keepscreenon_title" />

    <ListPreference
            android:defaultValue="@string/pref_rotation_auto"
            android:entries="@array/pref_rotation_entries_10"
            android:entryValues="@array/pref_rotation_values_10"
            android:key="@string/pref_rotation_id"
            android:summary="@string/pref_rotation_summary"
            android:title="@string/pref_rotation_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_fullscreen_defvalue"
            android:key="@string/pref_fullscreen_id"
            android:summary="@string/pref_fullscreen_summary"
            android:title="@string/pref_fullscreen_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_title_defvalue"
            android:key="@string/pref_title_id"
            android:summary="@string/pref_title_summary"
            android:title="@string/pref_title_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_pageintitle_defvalue"
            android:dependency="@string/pref_title_id"
            android:key="@string/pref_pageintitle_id"
            android:summary="@string/pref_pageintitle_summary"
            android:title="@string/pref_pageintitle_title" />

    <ListPreference
            android:defaultValue="@string/pref_toastposition_lefttop"
            android:entries="@array/pref_toastposition_entries"
            android:entryValues="@array/pref_toastposition_values"
            android:key="@string/pref_pagenumbertoastposition_id"
            android:summary="@string/pref_pagenumbertoastposition_summary"
            android:title="@string/pref_pagenumbertoastposition_title" />

    <ListPreference
            android:defaultValue="@string/pref_toastposition_leftbottom"
            android:entries="@array/pref_toastposition_entries"
            android:entryValues="@array/pref_toastposition_values"
            android:key="@string/pref_zoomtoastposition_id"
            android:summary="@string/pref_zoomtoastposition_summary"
            android:title="@string/pref_zoomtoastposition_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_showanimicon_defvalue"
            android:key="@string/pref_showanimicon_id"
            android:summary="@string/pref_showanimicon_summary"
            android:title="@string/pref_showanimicon_title" />

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="link_highlight"
            android:summary="@string/pref_link_highlight_summary"
            android:title="@string/pref_link_highlight_title" />

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="search_highlight"
            android:summary="@string/pref_search_highlight_summary"
            android:title="@string/pref_search_highlight_title" />

    <org.emdev.ui.preference.ColorPickerPreference
            android:key="current_search_highlight"
            android:summary="@string/pref_current_search_highlight_summary"
            android:title="@string/pref_current_search_highlight_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_storeGotoHistory_defvalue"
            android:key="@string/pref_storeGotoHistory_id"
            android:summary="@string/pref_storeGotoHistory_summary"
            android:title="@string/pref_storeGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_storeLinkGotoHistory_defvalue"
            android:key="@string/pref_storeLinkGotoHistory_id"
            android:summary="@string/pref_storeLinkGotoHistory_summary"
            android:title="@string/pref_storeLinkGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_storeOutlineGotoHistory_defvalue"
            android:key="@string/pref_storeOutlineGotoHistory_id"
            android:summary="@string/pref_storeOutlineGotoHistory_summary"
            android:title="@string/pref_storeOutlineGotoHistory_title" />

    <CheckBoxPreference
            android:defaultValue="@string/pref_storeSearchGotoHistory_defvalue"
            android:key="@string/pref_storeSearchGotoHistory_id"
            android:summary="@string/pref_storeSearchGotoHistory_summary"
            android:title="@string/pref_storeSearchGotoHistory_title" />

</PreferenceScreen>